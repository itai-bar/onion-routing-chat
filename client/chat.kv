<PasswordPopup>:
    id: PasswordPopup
    rows:2
    cols:1
    GridLayout:
        rows:2
        cols:1
        
        TextInput:
            id:roomPassword
            password:True
            multiline: False
            write_tab: False
            on_text_validate: root.btn_enter_room()
        Button:
            text:"Enter room"
            on_release:
                root.btn_enter_room()

<CreateRoomPopup>:
    id: CreateRoomPopup
    rows:3
    cols:1
    GridLayout:
        rows:3
        cols:1
        GridLayout:
            
            cols:2
            Label:
                text:'Name:'
            TextInput:
                id:roomName
                multiline: False
                write_tab: False
                on_text_validate: root.btn_create_room()
            Label:
                text:'Password:'
            TextInput:
                id:roomPassword
                password:True
                multiline: False
                write_tab: False
                on_text_validate: root.btn_create_room()
        Button:
            text:"Enter room"
            on_release:
                root.btn_create_room()

<MainWindow>:
    name: "main"

    GridLayout:
        rows: 3
        
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            Button:
                size_hint: 0.4, 0.7
                font_size: (root.width**2 + root.height**2) / 13**4
                text:"Room List"
                on_release:
                    root.manager.transition.direction = "right"
                    root.btn_goto_rooms()
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Button:
                size_hint: 0.4, 0.7
                font_size: (root.width**2 + root.height**2) / 13**4
                text:"Create Room"
                on_release:
                    root.btn_create_room()
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Button:
                size_hint: 0.2, 0.35
                font_size: (root.width**2 + root.height**2) / 13**4
                text:"Logout"
                on_release:
                    root.manager.transition.direction = "left"
                    root.btn_logout()

<RoomsWindow>:
    name: "rooms"

    roomsNames: roomsNames
    
    GridLayout:
        rows:2
        GridLayout:
            rows:1
            ScrollView:
                size: root.width, root.height/2
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    cols:4
                    size_hint_y: None
                    height: self.minimum_height
                    id: roomsNames
        GridLayout:
            cols:2
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'bottom'
                Button:
                    size_hint: 1.3, 0.2
                    size:root.width*0.5, root.height*0.25
                    text: "Refresh rooms"
                    on_release:
                        root.clean_rooms()
                        root.load_rooms()
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                Button:
                    size_hint: 0.7, 0.2
                    text: "Back"
                    size:root.width*0.25, root.height*0.25
                    on_release:
                        root.manager.transition.direction = "left"
                        root.go_to_main()
