    name: "signup"

    username: username
    password: password

    FloatLayout:

        Label:
            text:"Username: "
            font_size: (root.width**2 + root.height**2) / 13**4 
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: username
            multiline: False
            write_tab: False
            font_size: (root.width**2 + root.height**2) / 13**4 
            pos_hint: {"x":0.45, "top":0.9}
            size_hint: 0.4, 0.15
 
        Label:
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 13**4 
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            password: True
            multiline: False
            write_tab: False
            font_size: (root.width**2 + root.height**2) / 13**4 
            pos_hint: {"x":0.45, "top":0.7}
            size_hint: 0.4, 0.15
               
        Button:
            pos_hint:{"x":0.2,"y":0.01}
