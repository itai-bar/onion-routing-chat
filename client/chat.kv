<LoginWindow>:
    name: "login"

    username: username
    password: password

    FloatLayout:

        Label:
            text:"Username: "
            font_size: (root.width**2 + root.height**2) / 13**4 
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: username
            multiline: False
            write_tab: False
            font_size: (root.width**2 + root.height**2) / 13**4 
            pos_hint: {"x":0.45, "top":0.9}
            size_hint: 0.4, 0.15
            on_text_validate: root.btn_login()
 
        Label:
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 13**4 
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            password: True
            multiline: False
            write_tab: False
            font_size: (root.width**2 + root.height**2) / 13**4 
            pos_hint: {"x":0.45, "top":0.7}
            size_hint: 0.4, 0.15
            on_text_validate: root.btn_login()
               
        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Login"
            on_release:
                root.btn_login()

        Button:
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Don't have an Account? Create One"
            on_release:
                root.btn_goto_signup()

