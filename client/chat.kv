    rows:2
    cols:1

    GridLayout:
        rows:2
        GridLayout:
            rows:1
            row_force_default:True
            row_default_height:root.height*0.74
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    cols:1
                    size_hint_y: None
                    height: self.minimum_height
