        GridLayout:
            cols:1
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'bottom'
                Button:
                    id:banListOrMembersBttn
                    size_hint: 1, 0.5

<MainWindow>:
    name: "main"

    GridLayout:
        rows: 3
        
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            Button:
                size_hint: 0.4, 0.7
                font_size: (root.width**2 + root.height**2) / 13**4
                text:"Room List"
                on_release:
                    root.btn_goto_rooms()
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Button:
                size_hint: 0.4, 0.7
                font_size: (root.width**2 + root.height**2) / 13**4
                text:"Create Room"
                on_release:
                    root.btn_create_room()
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Button:
                size_hint: 0.2, 0.35
                font_size: (root.width**2 + root.height**2) / 13**4
                text:"Logout"
                on_release:
                    root.btn_logout()

<RoomsWindow>:
    name: "rooms"

    roomsNames: roomsNames
    
    GridLayout:
        rows:2
        GridLayout:
            rows:1
            row_force_default:True
            row_default_height:root.height*0.9
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    cols:4
                    size_hint_y: None
                    height: self.minimum_height
                    id: roomsNames
        GridLayout:
            cols:2
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'bottom'
                Button:
                    size_hint: 1.3, 0.2
                    size:root.width*0.5, root.height*0.25
                    text: "Refresh rooms"
                    on_release:
                        root.clean_rooms()
                        root.load_rooms()
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                Button:
                    size_hint: 0.7, 0.2
                    text: "Back"
                    size:root.width*0.25, root.height*0.25
                    on_release:
                        root.go_to_main()

<MessageLabel>:
    height:root.height_by_lines
    # time
    Label:
        id: time
        size_hint: None, None
        font_size: 10
        text: root.time_text
        height:root.height_by_lines
    # sender
    Label:
        id: sender
        size_hint: None, None
        text: root.sender_text
        color: 1, root.sender_color, 1, 1
        height:root.height_by_lines
    Label:
        id: content
        size_hint_x: 1
        text_size:self.size
        text: root.content_text
        height:root.height_by_lines

<ChatWindow>:
    name: "chat"

    GridLayout:
        rows:3

        GridLayout: # Buttons - Leave&Members&Back
            row_force_default: True
            row_default_height:root.height*0.1
            cols:3
            Button:
                size_hint: 0.15,0.1
                text:'Leave room'
                on_release:
                    root.leave_room()
            Button:
                size_hint: .4,.1
                text:'Room members/Ban list'
                on_release:
                    root.open_room_members_list()
            Button:
                size_hint: 0.25,1
                text: "Back"
                on_release:
                    root.go_to_rooms()

        GridLayout: 
            row_force_default: True
            row_default_height:root.height*0.6
            cols:1

            RecycleView:
                pos_hint: {"x":0.01, "y":0.7}
                data: root.messages
                scroll_y: 0
                text_size: self.size
                valign: "middle"
                # viewclass: "Label"
                viewclass: "MessageLabel"

                RecycleBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_size[1]
                    default_size_hint: 1, None
                    default_size: None, None
            

        FloatLayout:
            row_force_default: True
            row_default_height:root.height*0.15
            TextInput:
                id:message
                pos_hint: {"x":0.01, "y":0.025}
                size_hint: 0.8, 0.15
                multiline: False
                text_validate_unfocus:False
                on_text_validate:
                    root.send_message()

            Button:
                pos_hint: {"x":0.83, "y":0.02}
                size_hint: 0.15, 0.155
                text:'Send'
                on_release:root.send_message()